{
	"name": "event-viewer",
	"version": "0.1.1",
	"description": "A tool that can refer to Dev Protocol event information",
	"author": "Akira-Taniguchi",
	"license": "MPL-2.0",
	"scripts": {
		"build": "tsc",
		"build:production": "npm run prestart && npm prune --production",
		"watch": "tsc --w",
		"prestart": "npm run build && func extensions install",
		"start:host": "func start",
		"start": "npm-run-all --parallel start:host watch",
		"test": "npm run build && jest --runInBand",
		"lint": "npm run lint:eslint && npm run lint:format",
		"lint:eslint": "eslint . --ext .ts --fix",
		"lint:format": "prettier --write '**/*.{json,md,yml}'"
	},
	"jest": {
		"moduleFileExtensions": [
			"js",
			"json",
			"jsx",
			"ts",
			"tsx",
			"node"
		],
		"transform": {
			"^.+\\.(ts)$": "ts-jest"
		},
		"globals": {
			"ts-jest": {
				"config": "tsconfig.json"
			}
		},
		"testMatch": [
			"**/test/main/**/*.ts"
		]
	},
	"husky": {
		"hooks": {
			"pre-commit": "npm run lint"
		}
	},
	"dependencies": {
		"@types/pg": "7.14.1",
		"axios": "^0.19.2",
		"discord-webhook-ts": "3.0.3",
		"pg": "7.18.2",
		"reflect-metadata": "0.1.13",
		"typeorm": "0.2.22",
		"web3": "1.2.6"
	},
	"devDependencies": {
		"@azure/functions": "^1.0.1-beta1",
		"@types/jest": "^25.1.4",
		"@typescript-eslint/eslint-plugin": "^2.17.0",
		"@typescript-eslint/parser": "^2.17.0",
		"azure-function-context-mock": "^0.0.7",
		"azurite": "^3.5.0",
		"eslint": "^6.8.0",
		"eslint-config-prettier": "^6.9.0",
		"eslint-config-xo": "^0.27.2",
		"eslint-config-xo-typescript": "^0.24.1",
		"eslint-plugin-jest": "^23.8.2",
		"eslint-plugin-prettier": "^3.1.2",
		"husky": "^4.2.0",
		"jest": "^25.2.0",
		"npm-run-all": "^4.1.5",
		"prettier": "^1.19.1",
		"ts-jest": "^25.2.1",
		"typescript": "^3.3.3"
	},
	"repository": {
		"type": "git",
		"url": "git+https://github.com/dev-protocol/event-viewer.git"
	},
	"bugs": {
		"url": "https://github.com/dev-protocol/event-viewer/issues"
	},
	"homepage": "https://github.com/dev-protocol/event-viewer/blob/master/README.md"
}
